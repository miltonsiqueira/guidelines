# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true

[*.{js,py,ts}]
charset = utf-8

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 2

[{*.js,package.json,.travis.yml,.eslintrc,}]
indent_style = space
indent_size = 2
